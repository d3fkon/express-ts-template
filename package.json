{
  "name": "zero-pay-v2",
  "version": "1.0.0",
  "description": "",
  "main": "build/App.js",
  "scripts": {
    "copy-env": "copyfiles -f ./server/config/*.env ./build/config",
    "copy-swagger": "copyfiles -f ./server/swagger/*.yaml ./build/swagger",
    "copy-pem": "copyfiles -f *.pem ./build/",
    "dev": "cross-env NODE_ENV=development nodemon --watch 'server/**' --ext 'ts,json' --exec ts-node --project tsconfig.server.json index.ts",
    "server": "cross-env NODE_ENV=development DEVELOPMENT=server nodemon --watch 'server/**' --ext 'ts,json' --exec ts-node --project tsconfig.server.json server/App.ts",
    "build:server": "tsc --project tsconfig.server.json && npm run copy-env && npm run copy-swagger && npm run copy-pem",
    "build": "npm run build:server",
    "start": "cross-env NODE_ENV=production FORCE_COLOR=0 node ./build/index.js",
    "test-prod": "cross-env NODE_ENV=test-prod FORCE_COLOR=0 node ./build/index.js",
    "server:test-pay": "cross-env NODE_ENV=development DEVELOPMENT=server EST_PAY=true nodemon --watch 'server/**' --ext 'ts,json' --exec ts-node --project tsconfig.server.json server/App.ts",
    "test": "cross-env NODE_ENV=test jest --watchAll --runInBand --no-cache --rootDir=./server/tests",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm run build"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/setup.ts"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@aws-sdk/types": "^1.0.0-rc.3",
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.8",
    "@types/react": "^16.14.2",
    "@types/react-dom": "^16.9.10",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/uuid": "^8.3.0",
    "autoprefixer": "^10.2.4",
    "concurrently": "^5.3.0",
    "copyfiles": "^2.4.0",
    "json2mq": "^0.2.0",
    "postcss": "^8.2.6",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@sentry/node": "^6.4.1",
    "@sentry/tracing": "^6.4.1",
    "@types/jest": "^26.0.19",
